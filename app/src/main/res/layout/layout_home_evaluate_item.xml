<?xml version="1.0" encoding="utf-8"?><!--首页评价item-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/x32"
    android:background="@color/white"
    android:paddingBottom="@dimen/x32"
    android:paddingLeft="@dimen/x32"
    android:paddingRight="@dimen/x32"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/x48"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_user" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x24"
            android:layout_toRightOf="@+id/img_user"
            android:text="杀人不用刀▪用眼神"
            android:textColor="#999999"
            android:textSize="@dimen/x24" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2小时前"
            android:textColor="@color/fontcolor_f9"
            android:textSize="@dimen/x20" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x72"
        android:layout_marginTop="@dimen/x18"
        android:lineSpacingExtra="@dimen/x8"
        android:text="系的不错，就这样下回还找你们洗。"
        android:textColor="#333333"
        android:textSize="@dimen/x28" />
    <LinearLayout
        android:id="@+id/layout_pic"
        android:layout_marginTop="@dimen/x36"
        android:layout_marginLeft="@dimen/x72"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_picConunt"
            android:textSize="@dimen/x20"
            android:textColor="@color/color_yellow"
            android:text="【4张图】- "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/fontcolor_f9"
            android:textSize="@dimen/x20"
            android:text="轻触看图"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
