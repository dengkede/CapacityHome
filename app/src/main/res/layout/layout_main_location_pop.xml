<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/popsimple_write_rect"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_marginBottom="@dimen/x64"
    android:background="@drawable/home_rect_sloid_e03"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginLeft="@dimen/x110"
    android:layout_marginRight="@dimen/x110"
    android:layout_width="@dimen/x280"
    android:layout_height="@dimen/x56">
    <LinearLayout
        android:id="@+id/layout_car"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_car"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/car_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_car"
            android:layout_marginLeft="@dimen/x8"
            android:gravity="center"
            android:textColor="@color/fontcolor_f9"
            android:textSize="@dimen/x22"
            android:text="驾车"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_walk"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/home_rect_sloid_yellow3"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_walk"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/walk_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_walk"
            android:layout_marginLeft="@dimen/x8"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/x22"
            android:text="步行"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/x42"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/x28"
            android:textColor="@color/fontcolor_f6"
            android:text="您距离目标约"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_distance"
            android:textSize="@dimen/x28"
            android:textColor="@color/fontcolor_yellow"
            android:text="2.0KM"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageView
    android:id="@+id/location_imgType"
    android:adjustViewBounds="true"
    android:scaleType="centerCrop"
    android:src="@mipmap/walk_choose"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/location_tvType"
            android:layout_marginLeft="@dimen/x4"
            android:textSize="@dimen/x28"
            android:textColor="@color/fontcolor_f6"
            android:text="步行需要"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_time"
            android:textSize="@dimen/x28"
            android:textColor="@color/fontcolor_yellow"
            android:text="2分钟"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_locationStart"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/x28"
        android:textColor="@color/white"
        android:text="立即导航"
        android:gravity="center"
        android:layout_marginTop="@dimen/x66"
        android:background="@drawable/home_rect_sloid_yellow4"
        android:layout_width="@dimen/x284"
        android:layout_height="@dimen/x84" />
</LinearLayout>
