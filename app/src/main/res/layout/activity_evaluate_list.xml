<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fontcolor_f2"
    android:id="@+id/layout_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.capacityhome.selfcenter.PayPasswordActivity">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/relayout_imgBack"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/x120"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="@dimen/x16"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/ljt_black"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40" />
        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x28"
            android:text="取消"
            android:textColor="@color/fontcolor_f3"
            android:textSize="@dimen/x28" />
        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/left_white_arrow"
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/x36" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="用户使用评价"
            android:textColor="@color/fontcolor_f9"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/tv_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x28"
            android:text="我要评价"
            android:textColor="#333333"
            android:textSize="@dimen/x28" />
    </RelativeLayout>

    <com.chanven.lib.cptr.PtrClassicFrameLayout
        android:id="@+id/pcf_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView

            android:id="@+id/listview_evaluate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fontcolor_f2"
            android:clipToPadding="false"
            android:paddingTop="@dimen/x12"
            android:divider="@color/fontcolor_f2"
            android:dividerHeight="@dimen/x1"
           ></ListView>
    </com.chanven.lib.cptr.PtrClassicFrameLayout>

</LinearLayout>
