<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x54"
        android:layout_marginTop="@dimen/x36"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x28"
        android:paddingRight="@dimen/x28">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[抓拍]"
            android:textColor="@color/fontcolor_f9"
            android:textSize="@dimen/x42" />

        <TextView
            android:id="@+id/smartList_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x18"
            android:text="明江小区（7栋12楼2号）"
            android:textColor="@color/fontcolor_f3"
            android:textSize="@dimen/x42" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x18"
        android:paddingLeft="@dimen/x28">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="智能保护（天）："
            android:textColor="@color/fontcolor_f9"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/tv_homeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv"
            android:text=""
            android:textColor="@color/fontcolor_f3"
            android:textSize="@dimen/x34" />

        <LinearLayout
            android:id="@+id/layout_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/smarthome_list_halfcircle"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/x14"
            android:paddingLeft="@dimen/x24"
            android:paddingRight="@dimen/x24"
            android:paddingTop="@dimen/x14">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/shexiang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x12"
                android:text="即时视频"
                android:textColor="@color/white"
                android:textSize="@dimen/x28" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:visibility="gone"
        android:background="@color/color_e0"
        android:paddingLeft="@dimen/x28"
        android:paddingRight="@dimen/x28" />
</LinearLayout>
