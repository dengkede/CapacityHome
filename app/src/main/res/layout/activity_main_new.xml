<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relayout_top"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <RelativeLayout
            android:id="@+id/main_imgUser"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/x140"
            android:layout_height="match_parent">
            <ImageView
                android:adjustViewBounds="false"
                android:scaleType="centerCrop"
                android:src="@mipmap/main_pic"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/x24"
                android:layout_width="@dimen/x36"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_centerInParent="true"
            android:textSize="@dimen/x34"
            android:textColor="@color/fontcolor_f6"
            android:textStyle="bold"
            android:text="优e管家"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:layout_width="@dimen/x46"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/img_message"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/main_message"
                android:layout_width="@dimen/x46"
                android:layout_height="wrap_content" />
            <View
                android:visibility="gone"
                android:layout_marginRight="@dimen/x2"
                android:layout_marginTop="@dimen/x2"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/img_message"
                android:id="@+id/tv_Noread"
                android:layout_width="@dimen/x10"
                android:layout_height="@dimen/x10"
                android:background="@drawable/message_circle"
                />
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:id="@+id/line1"
        android:layout_below="@+id/relayout_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/fontcolor_f2"
        />
    <FrameLayout
        android:layout_above="@+id/line"
        android:layout_below="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>
    </FrameLayout>

    <View
        android:layout_above="@+id/layout_bottom"
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="#f2f2f2"
        />
    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_tab1"
            android:paddingTop="@dimen/x10"
            android:paddingBottom="@dimen/x10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_tab1"
                android:src="@mipmap/foot1_choose"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/x28"
                android:layout_height="@dimen/x28" />
            <TextView
                android:id="@+id/tv_tab1"
                android:text="优e首页"
                android:layout_marginTop="@dimen/x8"
                android:textSize="@dimen/x24"
                android:textColor="@color/color_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_tab2"
            android:paddingTop="@dimen/x10"
            android:paddingBottom="@dimen/x10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_tab2"
                android:src="@mipmap/foot2"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/x28"
                android:layout_height="@dimen/x28" />
            <TextView
                android:id="@+id/tv_tab2"
                android:text="门店价格"
                android:layout_marginTop="@dimen/x8"
                android:textSize="@dimen/x24"
                android:textColor="@color/color_f5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_tab3"
            android:paddingTop="@dimen/x10"
            android:paddingBottom="@dimen/x10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_tab3"
                android:src="@mipmap/foot3"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/x28"
                android:layout_height="@dimen/x28" />
            <TextView
                android:id="@+id/tv_tab3"
                android:text="我的订单"
                android:layout_marginTop="@dimen/x8"
                android:textSize="@dimen/x24"
                android:textColor="@color/color_f5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_tab4"
            android:paddingTop="@dimen/x10"
            android:paddingBottom="@dimen/x10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_tab4"
                android:src="@mipmap/foot4"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/x28"
                android:layout_height="@dimen/x28" />
            <TextView
                android:id="@+id/tv_tab4"
                android:text="充值中心"
                android:layout_marginTop="@dimen/x8"
                android:textSize="@dimen/x24"
                android:textColor="@color/color_f5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <include
        layout="@layout/layout_main"
        android:visibility="gone"
        />
    <View
        android:visibility="gone"
        android:id="@+id/view_zhezhao2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        />
</RelativeLayout>
