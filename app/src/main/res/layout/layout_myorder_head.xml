<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x36"
        android:layout_marginBottom="@dimen/x71"
        android:textSize="@dimen/x42"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:text="订单管理"
        android:textColor="@color/fontcolor_f3"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/x40"
        android:paddingLeft="@dimen/x28"
        android:paddingRight="@dimen/x28">

        <LinearLayout
            android:id="@+id/tv_laundry_totalCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_QuaryMoneyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总消费 "
                android:textColor="@color/fontcolor_f9"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/tv_order_consumptionMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="@color/fontcolor_yellow"
                android:textSize="@dimen/x34"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 元"
                android:textColor="@color/fontcolor_f9"
                android:textSize="@dimen/x30" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_laundry_totalCount"
            android:layout_marginTop="@dimen/x26"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用 "
                android:textColor="@color/fontcolor_f9"
                android:textSize="@dimen/x30" />

            <TextView
                android:layout_marginLeft="@dimen/x8"
                android:textStyle="bold"
                android:id="@+id/tv_myorder_totalCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/fontcolor_f3"
                android:textSize="@dimen/x34"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 次洗衣服务"
                android:textColor="@color/fontcolor_f9"
                android:textSize="@dimen/x30" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_type"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/laundy_rect_yellow_80"
            android:gravity="center"
            android:text="全部订单"
            android:textSize="@dimen/x22"
            android:textColor="@color/white"
            android:paddingTop="@dimen/x12"
            android:paddingBottom="@dimen/x12"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x28"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x80" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x4"
        android:background="@drawable/shadow"
        />
</LinearLayout>
