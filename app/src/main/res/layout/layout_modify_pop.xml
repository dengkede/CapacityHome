<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/popsimple_write_rect"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/tv_title"
    android:textColor="@color/fontcolor_f3"
    android:text="修改"
    android:gravity="center"
    android:paddingTop="@dimen/x26"
    android:paddingBottom="@dimen/x26"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_content"
        android:textColorHint="@color/fontcolor_f9"
        android:textColor="@color/fontcolor_f3"
        android:gravity="center"
        android:textSize="@dimen/x28"
        android:layout_marginLeft="@dimen/x28"
        android:layout_marginRight="@dimen/x28"
        android:background="@drawable/e3_rect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x84" />
    <LinearLayout
        android:layout_marginLeft="@dimen/x28"
        android:layout_marginRight="@dimen/x28"
        android:layout_marginTop="@dimen/x46"
        android:layout_marginBottom="@dimen/x46"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_sure"
            android:text="确定"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/home_rect_sloid_yellow2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/x28"
            android:layout_height="@dimen/x84" />
        <TextView
            android:id="@+id/tv_cancel"
            android:text="取消"
            android:textSize="@dimen/x28"
            android:gravity="center"
            android:textColor="@color/fontcolor_f9"
            android:background="@drawable/home_rect_sloid_e02"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x12"
            android:layout_height="@dimen/x86" />
    </LinearLayout>
</LinearLayout>
