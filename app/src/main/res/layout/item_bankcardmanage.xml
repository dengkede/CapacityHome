<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/x32"
    android:orientation="vertical"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="张三"
        android:id="@+id/bankManage_tv_userName"
        android:textSize="@dimen/x30"
        android:textColor="@color/fontcolor_f3"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/rjt_hui"
        android:layout_width="@dimen/x30"
        android:layout_height="@dimen/x30" />
</RelativeLayout>
    <TextView
        android:id="@+id/bankManage_tvBankName"
        android:paddingTop="@dimen/x26"
        android:lineSpacingMultiplier="1.1"
        android:text="中国建设银行"
        android:textColor="@color/fontcolor_f9"
        android:textSize="@dimen/x30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/bankManage_tvBankNumber"
        android:paddingTop="@dimen/x20"
        android:lineSpacingMultiplier="1.1"
        android:text="620 1726 3512 3746 0000 8276 763"
        android:textColor="@color/fontcolor_yellow"
        android:textSize="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingBottom="@dimen/x22"
            android:id="@+id/bankManage_tv_set"
            android:paddingTop="@dimen/x20"
            android:lineSpacingMultiplier="1.1"
            android:text="设为默认"
            android:textColor="@color/fontcolor_f9"
            android:textSize="@dimen/x28"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/relayout_delete"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
