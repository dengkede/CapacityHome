<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_layout"
    android:background="#ffffff"
     >
    <RelativeLayout
        android:id="@+id/relayout_top"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x112">
        <RelativeLayout
            android:id="@+id/main_imgUser"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/x140"
            android:layout_height="match_parent">
        <ImageView
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            android:src="@mipmap/main_pic"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x24"
            android:layout_width="@dimen/x36"
            android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_centerInParent="true"
            android:textSize="@dimen/x34"
            android:textColor="@color/fontcolor_f6"
            android:textStyle="bold"
            android:text="优e管家"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_message"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/main_message"
            android:layout_width="@dimen/x46"
            android:layout_height="wrap_content" />
    </RelativeLayout>
<View
    android:id="@+id/line1"
    android:layout_below="@+id/relayout_top"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x1"
    android:background="@color/fontcolor_f2"
    />
<LinearLayout
    android:id="@+id/layout_tab"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x80"
    android:layout_below="@+id/line1"
    android:layout_alignParentStart="true">
    <LinearLayout
        android:id="@+id/layout_tab1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@mipmap/home_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/x24"
            android:textColor="@color/fontcolor_f9"
            android:text="钱包"
            android:layout_marginLeft="@dimen/x6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_tab2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@mipmap/home_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/x24"
            android:textColor="@color/fontcolor_f9"
            android:text="计费"
            android:layout_marginLeft="@dimen/x6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_tab3"
        android:layout_width="0dp"
        android:layout_weight="1.4"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@mipmap/home_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/x26"
            android:textColor="@color/fontcolor_f9"
            android:text="App下载"
            android:layout_marginLeft="@dimen/x6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_tab4"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@mipmap/home_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/x26"
            android:textColor="@color/fontcolor_f9"
            android:text="订单"
            android:layout_marginLeft="@dimen/x6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_tab5"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@mipmap/home_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/x24"
            android:textColor="@color/fontcolor_f9"
            android:text="个人"
            android:layout_marginLeft="@dimen/x6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
    <ImageView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x6"
        android:background="@drawable/shadow_line"
        android:alpha="100"
        android:layout_below="@+id/layout_tab"/>
    <com.baidu.mapapi.map.MapView
        android:layout_below="@+id/line2"
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.baidu.mapapi.map.MapView>

    <ImageView
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/location_icon"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<LinearLayout
    android:id="@+id/layout_saoma"
    android:layout_centerHorizontal="true"
    android:layout_marginRight="@dimen/x108"
    android:layout_marginLeft="@dimen/x108"
    android:layout_marginBottom="@dimen/x84"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/main_erweima_rect"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x88">
    <ImageView
        android:src="@mipmap/saoma"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="@dimen/x32"
        android:gravity="center"
        android:textSize="@dimen/x28"
        android:text="扫码开箱"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x88" />
</LinearLayout>
    <LinearLayout
        android:layout_above="@+id/layout_saoma"
        android:layout_marginBottom="@dimen/x18"
        android:layout_marginRight="@dimen/x28"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/img_service"
            android:background="@drawable/main_circle"
            android:layout_width="@dimen/x66"
            android:layout_height="@dimen/x66">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/main_customer_service"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/x42" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/img_update"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/main_circle"
            android:layout_width="@dimen/x66"
            android:layout_height="@dimen/x66">
            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/main_update"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/x42"
                android:layout_height="@dimen/x42" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout

        android:layout_below="@+id/line2"
        android:id="@+id/layout_orderList"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>
    <View
        android:visibility="gone"
        android:id="@+id/view_zhezhao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4d000000"
        />
</RelativeLayout>