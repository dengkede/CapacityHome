<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_parent"
    android:background="#ffffff"
    tools:context="com.example.administrator.capacityhome.laundry.LaundryActivity">
    <include
        android:id="@+id/layout_top"
        layout="@layout/layout_toptitle2"
        />

    <com.chanven.lib.cptr.PtrClassicFrameLayout
        android:layout_below="@+id/layout_top"
        android:id="@+id/pcf_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <ListView
        android:id="@+id/feedback_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#f2f2f2"
        android:divider="#f2f2f2"
        android:dividerHeight="@dimen/x20"
        android:clipToPadding="false"
        ></ListView>
    </com.chanven.lib.cptr.PtrClassicFrameLayout>
    <View
        android:id="@+id/view_zhezhao"
        android:visibility="gone"
        android:layout_below="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#30000000"
        />
</RelativeLayout>
