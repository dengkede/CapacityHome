<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:paddingTop="@dimen/x70"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#ffffff"
        android:paddingLeft="@dimen/x28"
        android:paddingRight="@dimen/x28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/x28"
                android:text="使用洗衣次数："
                android:textColor="@color/fontcolor_f9"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_laundry_totalCount"
                android:textSize="@dimen/x34"
                android:textColor="@color/fontcolor_f9"
                android:text="323517"
                android:paddingBottom="@dimen/x4"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:textSize="@dimen/x28"
                android:text="次"
                android:gravity="center"
                android:textColor="@color/fontcolor_f9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/layout"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/x26"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/x28"
                android:text="目前正在使用："
                android:textColor="@color/fontcolor_f9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_laundy_currentCount"
                android:text="3"
                android:textStyle="bold"
                android:paddingBottom="@dimen/x4"
                android:textSize="@dimen/x34"
                android:textColor="@color/fontcolor_f3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="2dp"
                android:textSize="@dimen/x28"
                android:text="个衣柜"
                android:textColor="@color/fontcolor_f9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_type"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/laundy_rect_yellow"
            android:gravity="center"
            android:text="可取衣"
            android:textSize="@dimen/x22"
            android:textColor="@color/white"
            android:paddingTop="@dimen/x12"
            android:paddingBottom="@dimen/x12"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/x36"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x20"
        android:background="#F2F2F2"
        />
</LinearLayout>
