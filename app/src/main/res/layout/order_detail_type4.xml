<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="下单时间："
            android:textSize="@dimen/x22"
            android:textColor="@color/fontcolor_f3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_time_into"
            android:textSize="@dimen/x22"
            android:textColor="@color/fontcolor_f9"
            android:text="2018-02-04 09:20:35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
<LinearLayout
    android:layout_marginTop="@dimen/x38"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="收货时间："
        android:textSize="@dimen/x22"
        android:textColor="@color/fontcolor_f3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_time_get"
        android:textSize="@dimen/x22"
        android:textColor="@color/fontcolor_f9"
        android:text="2018-02-03 19:57:14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="@dimen/x38"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="洗衣时间："
            android:textSize="@dimen/x22"
            android:textColor="@color/fontcolor_f3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/x22"
            android:textColor="@color/fontcolor_f3"
            android:text="1天"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x38"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入货时间："
            android:textColor="@color/fontcolor_f3"
            android:textSize="@dimen/x22" />

        <TextView
            android:id="@+id/tv_time_IntoCargo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-02-04 13:36:57"
            android:textColor="@color/fontcolor_f9"
            android:textSize="@dimen/x22" />
    </LinearLayout>

    <LinearLayout
        android:paddingBottom="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x38"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成时间："
            android:textColor="@color/fontcolor_f3"
            android:textSize="@dimen/x22" />

        <TextView
            android:id="@+id/tv_time_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-02-04 13:36:57"
            android:textColor="@color/fontcolor_f9"
            android:textSize="@dimen/x22" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_getGoods"
        android:visibility="gone"
        android:paddingBottom="@dimen/x20"
        android:layout_marginTop="@dimen/x18"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="取件时间："
            android:textSize="@dimen/x22"
            android:textColor="@color/fontcolor_f3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/orderDetail_state"
            android:textSize="@dimen/x22"
            android:textColor="@color/fontcolor_f9"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
