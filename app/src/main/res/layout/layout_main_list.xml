<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="@dimen/x112">
    <View
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#f2f2f2"
        />
    <RelativeLayout
        android:paddingLeft="@dimen/x28"
        android:paddingRight="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_2"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/x32"
        android:layout_height="@dimen/x32" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_toRightOf="@+id/img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x12"
        android:textSize="@dimen/x28"
        android:textColor="@color/fontcolor_f6"
        android:text="04/05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_hours"
        android:layout_toRightOf="@+id/tv_time"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x8"
        android:textSize="@dimen/x28"
        android:textColor="@color/fontcolor_f6"
        android:text="16点"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv1"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/tv_hours"
        android:layout_centerVertical="true"
        android:text="使用"
        android:layout_marginLeft="@dimen/x12"
        android:gravity="center_vertical"
        android:textColor="@color/fontcolor_f6"
        android:textSize="@dimen/x28"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tv_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/tv1"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x8"
        android:layout_toLeftOf="@+id/img2"
        android:gravity="center_vertical"
        android:textColor="@color/fontcolor_yellow"
        android:textSize="@dimen/x28"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/img2"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/rjt_hui"
        android:layout_width="@dimen/x32"
        android:layout_height="@dimen/x32" />
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/fontcolor_f2"
        />
    </RelativeLayout>
</LinearLayout>
