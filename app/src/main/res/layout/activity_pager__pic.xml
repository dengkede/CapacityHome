
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30000000"
    android:id="@+id/layout_parent"
    >

    <com.example.administrator.capacityhome.picture_scan.HackyViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_pager"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="#30000000"
        android:gravity="center"
        android:padding="10dp"
        android:text="0"
        android:textColor="#eeeeee"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/layout_top"
        android:background="#30000000"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x112">
        <RelativeLayout
            android:paddingLeft="@dimen/x20"
            android:id="@+id/relayout_imgBack"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/x120"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/left_white_arrow"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40" />
        </RelativeLayout>

        <ImageView
            android:src="@mipmap/logo"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/x126"
            android:layout_height="@dimen/x32" />
        <TextView
            android:drawableLeft="@mipmap/delete_cdr00"
            android:id="@+id/tv_delete"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x28"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="@dimen/x28"
            android:text=""
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>