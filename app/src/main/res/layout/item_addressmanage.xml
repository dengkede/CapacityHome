<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/x36"
    android:orientation="vertical"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="张三"
        android:id="@+id/addressManage_tv_userName"
        android:textSize="@dimen/x28"
        android:textColor="@color/fontcolor_f3"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/addressManage_tv_phoneNumber"
        android:textColor="@color/fontcolor_f3"
        android:layout_marginLeft="@dimen/x12"
        android:text="152876261523"
        android:layout_toRightOf="@+id/addressManage_tv_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/rjt_hui"
        android:layout_width="@dimen/x32"
        android:layout_height="@dimen/x32" />
</RelativeLayout>

    <TextView
        android:id="@+id/addressManage_tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.1"
        android:paddingTop="@dimen/x20"
        android:text="四川省德阳市沈阳区工农村明江街道29号"
        android:textColor="@color/fontcolor_f9"
        android:textSize="@dimen/x28" />

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:paddingBottom="@dimen/x36"
           android:id="@+id/addressmanage_tv_set"
           android:paddingTop="@dimen/x34"
           android:lineSpacingMultiplier="1.1"
           android:text="设为默认地址"
           android:textColor="@color/fontcolor_f9"
           android:textSize="@dimen/x28"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content" />
       <RelativeLayout
           android:id="@+id/relayout_delete"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="match_parent">
           <ImageView
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:adjustViewBounds="true"
               android:scaleType="centerCrop"
               android:src="@mipmap/del"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RelativeLayout>
   </LinearLayout>
</LinearLayout>
